{
  "name": "astro-emails",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "tw": "tailwindcss -c ./tailwind.config.mjs -i ./src/assets/styles.css -o ./src/assets/compiled-styles.css",
    "dev": "concurrently \"astro dev\" \"npm run tw -- --watch\"",
    "start": "npm run dev",
    "_build": "npm run tw -- --minify && astro build",
    "build": "astro check && npm run _build",
    "build-unsafe": "npm run _build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.6",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^4.4.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tailwind-merge": "^2.2.1"
  }
}
