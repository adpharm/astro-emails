---
import { outlookVersionsMap, type OutlookTagProps } from "@/utils/types";

interface Props extends OutlookTagProps {}

const { onlyVersion, onlyVersionsGreaterThanOrEqualTo, onlyVersionsLessThanOrEqualTo, notVersion } = Astro.props;

const outlookTagProps = {
  only: onlyVersion ? outlookVersionsMap[onlyVersion as keyof typeof outlookVersionsMap] : onlyVersion,
  gte: onlyVersionsGreaterThanOrEqualTo
    ? outlookVersionsMap[onlyVersionsGreaterThanOrEqualTo as keyof typeof outlookVersionsMap]
    : onlyVersionsGreaterThanOrEqualTo,
  lte: onlyVersionsLessThanOrEqualTo
    ? outlookVersionsMap[onlyVersionsLessThanOrEqualTo as keyof typeof outlookVersionsMap]
    : onlyVersionsLessThanOrEqualTo,
  not: notVersion ? outlookVersionsMap[notVersion as keyof typeof outlookVersionsMap] : notVersion,
};
---

{/* The <outlook></outlook> tag is from a Maizzle: https://maizzle.com/docs/tags#outlook */}
<outlook {...outlookTagProps}>
  <slot />
</outlook>
