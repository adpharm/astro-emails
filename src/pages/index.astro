---
import type { ComponentProps } from "@/utils/types";
import Layout from "@/layouts/Layout.astro";
import Row from "@/components/Row.astro";
import Col from "@/components/Col.astro";
import Link from "@/components/Link.astro";
import Div from "@/components/Div.astro";
import Spacer from "@/components/Spacer.astro";

interface Props extends ComponentProps {}

const { lang } = Astro.props;
---

<Layout lang={lang} subject="Welcome to Astro, Ben." previewText="">
  <Div>
    <Row>
      <Col class="bg-gray-100 border-t-4-yellow-500 border-l-4-yellow-500 sm:bg-red-100 lg:bg-blue-200">Hello</Col>
      <Col class="bg-gray-200 w-[500px]">
        <h1>Welcome to Astro</h1>
        <p>This is a simple Astro starter template. It includes a few common features to help you get started.</p>
        <p>
          <!-- <Link href="https://docs.astro.build/" target="_blank">Read the Astro documentation</Link> -->
        </p>
      </Col>
      <Col class="bg-gray-300 border-t-4-dashed-black">Here I am</Col>
    </Row>

    <Spacer px="100" />
    <p>I'm in between spacers - updated 16 !!</p>
    <Spacer px="100" />

    <Row class="py-20 bg-gray-200">
      <Col class="border border-gray-700">Column 1</Col>
      <Col class="border border-red-500">Column 2</Col>
      <Col class="border border-violet-500">
        <p>Column 3</p>
        <Row class="border border-green-500">
          <Col class="border border-gray-500 w-1/3">Column 3.1</Col>
          <Col>Column 3.2</Col>
        </Row>
      </Col>
      <Col class="border border-indigo-500">
        <p>Column 4</p>
        <Row class="border border-blue-200">
          <Col class="border border-gray-500">Column 4.1</Col>
          <Col>Column 4.2</Col>
        </Row>
      </Col>
    </Row>
  </Div>
</Layout>
